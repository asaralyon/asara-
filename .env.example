# ===========================================
# ASARA Lyon - Variables d'environnement
# ===========================================
# Copiez ce fichier en .env.local pour le développement

# ----- Base de données -----
DATABASE_URL="postgresql://postgres:password@localhost:5432/asara_lyon?schema=public"

# ----- NextAuth / Auth -----
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="votre-secret-super-securise-minimum-32-caracteres"

# ----- JWT -----
JWT_SECRET="votre-jwt-secret-super-securise-minimum-32-caracteres"
JWT_EXPIRES_IN="7d"

# ----- Stripe -----
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Prix Stripe (à créer dans le dashboard Stripe)
STRIPE_PRICE_PROFESSIONAL="price_..."  # 100€/an
STRIPE_PRICE_MEMBER="price_..."         # 15€/an

# ----- Email (Nodemailer) -----
SMTP_HOST="mail.infomaniak.com"
SMTP_PORT="587"
SMTP_USER="contact@asara-lyon.fr"
SMTP_PASSWORD="votre-mot-de-passe-email"
SMTP_FROM="ASARA Lyon <contact@asara-lyon.fr>"

# ----- Application -----
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="ASARA Lyon"

# ----- Google (SEO - optionnel) -----
GOOGLE_SITE_VERIFICATION=""

# ----- Environnement -----
NODE_ENV="development"
